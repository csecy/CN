# lab1.tcl -- simple 3-hop point-to-point
set ns [new Simulator]
set tf [open lab1.tr w]
$ns trace-all $tf
set nf [open lab1.nam w]
$ns namtrace-all $nf

# create nodes
set n0 [$ns node]
set n1 [$ns node]
set n2 [$ns node]   ;# router
set n3 [$ns node]   ;# destination

# labels/colors
$n0 label "src0"
$n1 label "src1"
$n2 label "router"
$n3 label "sink"
$ns color 1 "red"
$ns color 2 "blue"

# links: n0-n2, n1-n2 are 10Mb; n2-n3 is bottleneck 1Mb
$ns duplex-link $n0 $n2 10Mb 30ms DropTail
$ns duplex-link $n1 $n2 10Mb 30ms DropTail
$ns duplex-link $n2 $n3 1Mb 30ms DropTail

# queue limits (packets)
$ns queue-limit $n0 $n2 10
$ns queue-limit $n1 $n2 10
$ns queue-limit $n2 $n3 5

# agents and CBR apps
set udp0 [new Agent/UDP]
$ns attach-agent $n0 $udp0
set cbr0 [new Application/Traffic/CBR]
$cbr0 attach-agent $udp0
$udp0 set class_ 1

set udp1 [new Agent/UDP]
$ns attach-agent $n1 $udp1
set cbr1 [new Application/Traffic/CBR]
$cbr1 attach-agent $udp1
$udp1 set class_ 2
$cbr1 set packetSize_ 500
$cbr1 set interval_ 0.005

# sink
set null [new Agent/Null]
$ns attach-agent $n3 $null

# connect agents
$ns connect $udp0 $null
$ns connect $udp1 $null

proc finish {} {
    global ns tf nf
    $ns flush-trace
    exec nam lab1.nam &
    close $tf
    close $nf
    exit 0
}

# start CBRs and run
$ns at 0.1 "$cbr0 start"
$ns at 0.1 "$cbr1 start"
$ns at 10.0 "finish"
$ns run
